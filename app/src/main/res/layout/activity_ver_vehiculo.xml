<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verVehiculo"
    android:layout_margin="50px"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nVehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="60px"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/pVehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="60px"
        android:hint="Placa" />


    <Spinner
        android:id="@+id/tVehiculo"
        android:layout_width="match_parent"
        android:textSize="60px"
        android:layout_height="wrap_content" />

    <Switch
        android:textSize="60px"
        android:id="@+id/eVehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/vehiculoBoton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/deleteVehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Eliminar vehiculo" />
</LinearLayout>