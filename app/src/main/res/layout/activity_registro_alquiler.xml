<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroAlquiler"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginHorizontal="30dp"

   >

    <TextView
        android:id="@+id/fechaInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/seleccione_la_fecha_de_inicio"
        android:textAlignment="center"
        android:inputType="date"
        android:minHeight="48dp"
        android:textColorHint="#78909C"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/fechaFin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:textAlignment="center"
        android:hint="@string/seleccione_la_fecha_de_fin"
        android:inputType="date"

        android:minHeight="48dp"
        android:textColorHint="#78909C"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/tiempoAlquiler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:textAlignment="center"
        android:hint="@string/tiempo_de_alquiler"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#78909C"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/precioAlquiler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:hint="@string/precio_de_alquiler"
        android:textColorHint="#78909C"
        android:textSize="23sp" />

    <Spinner
        android:id="@+id/idVehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:spinnerMode="dropdown"
        android:contentDescription="@string/seleccione_un_vehiculo"
        android:textSize="23sp" />

    <Spinner
        android:id="@+id/idCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/seleccione_un_cliente"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/registroAl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        android:backgroundTint="#06618A"
        app:cornerRadius="15dp"
        android:text="@string/registrar_alquiler" />


</LinearLayout>